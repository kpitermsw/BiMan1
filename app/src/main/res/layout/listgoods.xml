<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal" >

    	<TextView
	        android:id="@+id/cnm_goodart"
        	android:layout_width="110dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:text="TextView" />

    	<TextView
	        android:id="@+id/cnm_good"
        	android:layout_width="600dp"
        	android:layout_height="wrap_content"
        	android:textSize="25dip"
        	android:text="TextView" />

    	<TextView
	        android:id="@+id/brand"
        	android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:text="" />
    		
    	
    </LinearLayout>
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:orientation="horizontal" >

    	<TextView
	        android:id="@+id/captcost"
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:text=" Цена:" />
    	<TextView
	        android:id="@+id/cost"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="25dip"
        	android:text="TextView" />
    	
    	<TextView
	        android:id="@+id/captnOSTTotal"
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:text="Нал.:" />
    	<TextView
	        android:id="@+id/nOSTTotal"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="25dip"
        	android:text="TextView" />

    	<TextView
	        android:id="@+id/captnOSTReserv"
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:text="рез.:" />
    	<TextView
	        android:id="@+id/nOSTReserv"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="25dip"
        	android:text="TextView" />

    	<TextView
	        android:id="@+id/captnOSTFree"
        	android:layout_width="50dp"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:text="св.:" />
    	<TextView
	        android:id="@+id/nOSTFree"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:textSize="25dip"
        	android:text="TextView" />
	</LinearLayout>
	
</LinearLayout>	