<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dtab"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="100dp"> 

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text=" Поиск " />

		<EditText
		    android:id="@+id/findText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:ems="10" >

		</EditText>

		<Button
		    android:id="@+id/bFind"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Найти" />

    </LinearLayout>
    
	
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent" 
	    android:orientation="horizontal">

   	<LinearLayout
    	    android:layout_width="299dp"
    	    android:layout_height="fill_parent"
    	    android:background="#888888"
    	    android:orientation="vertical" >

    		<LinearLayout
		        android:layout_width="300dp"
        		android:layout_height="fill_parent"
        		android:orientation="vertical"
            	android:layout_margin="1dip"
        		android:background="#000000" >

    			<CheckBox
    			    android:id="@+id/checkBox1"
    			    android:layout_width="wrap_content"
    			    android:layout_height="wrap_content"
    			    android:text="CheckBox" />

    			<Spinner
    			    android:id="@+id/spinner_mngr"
    			    android:layout_width="match_parent"
    			    android:layout_height="wrap_content" />

    			<Spinner
    			    android:id="@+id/spinner_typedoc"
    			    android:layout_width="match_parent"
    			    android:layout_height="wrap_content" />

    			<Spinner
    			    android:id="@+id/spinner_interval"
    			    android:layout_width="match_parent"
    			    android:layout_height="wrap_content" />
    						
    						
			</LinearLayout>

    	    
    	</LinearLayout>


    	<LinearLayout
	        android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical" 
        	android:background="#888888" >
			<ListView
	    		android:id="@+id/listDocs"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent" 
            	android:layout_margin="1dip"
            	android:background="#000000" >
			</ListView>        
    	</LinearLayout>
	</LinearLayout>
		
</LinearLayout><!-- From: file:/C:/Documents%20and%20Settings/piter/AndroidStudioProjects/BiMan1/app/src/main/res/layout/doctab.xml -->